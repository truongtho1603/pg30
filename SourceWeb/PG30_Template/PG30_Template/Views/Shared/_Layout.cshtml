<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My Template</title>

        <link href="~/Content/grid.css" rel="stylesheet" />
        <link href="~/Content/reset.css" rel="stylesheet" />
        <link href="~/Content/style.css" rel="stylesheet" />
        <link href="~/Content/superfish.css" rel="stylesheet" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        <script src="~/Scripts/jquery-1.6.4.min.js" type="text/javascript"></script>
        <script src="~/Scripts/ff_cash.js" type="text/javascript"></script>
        <script src="~/Scripts/superfish.js" type="text/javascript"></script>
        <script src="~/Scripts/tms-0.3.1.js" type="text/javascript"></script>
        <script src="~/Scripts/tms_presets.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.jqtransform.js" type="text/javascript"></script>
        <script src="~/Scripts/cufon-yui.js" type="text/javascript"></script>
        <script src="~/Scripts/cufon-replace.js" type="text/javascript"></script>
        <script src="~/Scripts/Kozuka_Gothic_Pro_R.font.js" type="text/javascript"></script>
        <script src="~/Scripts/Kozuka_Gothic_Pro_M.font.js" type="text/javascript"></script>
        <script src="~/Scripts/Kozuka_Gothic_Pro_B.font.js" type="text/javascript"></script>        
        <script src="~/Scripts/Kozuka_Gothic_Pro_H.font.js" type="text/javascript"></script>
        
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="main">
            <header>
            </header>
            <div class="submit">
                @RenderSection("submit", required: false)
            </div>
        </div>
        <section id="content">
            @RenderBody()
        </section>
        <footer>
            <div class="container_24">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
